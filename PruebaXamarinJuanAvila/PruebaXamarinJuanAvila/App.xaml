<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PruebaXamarinJuanAvila.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Black">#000000</Color>
            <Style TargetType="Label" x:Key="LabelTitle">
                <Setter Property="FontSize" Value="{OnPlatform Android=21,iOS=28}"></Setter>
            </Style>
            <Style TargetType="Label" x:Key="LabelContent">
                <Setter Property="FontSize" Value="{OnPlatform Android=17,iOS=14}"></Setter>
            </Style>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>